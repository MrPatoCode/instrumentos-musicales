<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RandomFragment"
    android:background="@color/whiteC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvInstrument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/purpleC"
            android:text="Instrumento"
            android:textSize="36dp"/>

        <ImageView
            android:id="@+id/ivInstrument"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center"
            android:layout_marginTop="14sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_random"
            android:layout_width="128sp"
            android:layout_height="128sp"
            android:layout_gravity="center"
            android:background ="@drawable/baseline_sync_24"/>

    </LinearLayout>

</LinearLayout>